{
  "name": "translations-app",
  "version": "1.0.0-beta.1",
  "private": true,
  "dependencies": {
    "@dhis2/d2-i18n": "^1.0.6",
    "@dhis2/d2-ui-app": "^1.0.8",
    "@dhis2/d2-ui-core": "^1.3.2",
    "@dhis2/d2-ui-header-bar": "^1.1.7",
    "@material-ui/core": "^3.0.1",
    "@material-ui/icons": "^3.0.1",
    "autoprefixer": "7.1.6",
    "babel-core": "6.26.0",
    "babel-jest": "20.0.3",
    "babel-loader": "7.1.2",
    "babel-preset-react-app": "^3.1.2",
    "babel-runtime": "6.26.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "css-loader": "0.28.7",
    "d2": "^30.0.2",
    "d2-manifest": "^1.0.0",
    "dotenv": "4.0.0",
    "dotenv-expand": "4.2.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.5",
    "fs-extra": "3.0.1",
    "html-webpack-plugin": "2.29.0",
    "jest": "20.0.4",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.8",
    "promise": "8.0.1",
    "prop-types": "^15.6.2",
    "raf": "3.4.0",
    "react": "^16.4.2",
    "react-dev-utils": "^5.0.2",
    "react-dom": "^16.4.2",
    "react-jss": "^8.6.1",
    "resolve": "1.6.0",
    "style-loader": "0.19.0",
    "sw-precache-webpack-plugin": "0.11.4",
    "url-loader": "0.6.2",
    "webpack": "3.8.1",
    "webpack-dev-server": "2.11.3",
    "webpack-manifest-plugin": "1.3.2",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "@dhis2/code-style": "^1.4.2",
    "@dhis2/d2-i18n-generate": "^1.1.1",
    "chai": "^4.1.2",
    "cucumber": "^4.2.1",
    "enzyme": "^3.4.4",
    "enzyme-adapter-react-16.3": "^1.0.0",
    "husky": "^1.0.0-rc.13",
    "import-export": "^1.0.1",
    "jest-enzyme": "^6.0.3",
    "postcss-rtl": "^1.3.2"
  },
  "scripts": {
    "manifest": "d2-manifest package.json ./public/manifest.webapp",
    "start": "yarn manifest && yarn localize && node scripts/start.js",
    "build": "yarn manifest && yarn localize && node scripts/build.js && cp ./package.json ./build/package.json",
    "localize": "d2-i18n-generate -n translations-app -p ./i18n/ -o ./src/locales/",
    "test": "node scripts/test.js --env=jsdom",
    "extract-pot": "node scripts/pot-extractor.js",
    "refresh-translations-template": "yarn extract-pot -o en.pot && git add ./i18n/en.pot",
    "coverage": "yarn test --coverage",
    "format": "yarn localize && code-style"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commit-style",
      "pre-commit": "yarn format && yarn refresh-translations-template"
    }
  },
  "manifest.webapp": {
    "name": "DHIS2 Translations App",
    "description": "DHIS2 Translations App",
    "icons": {
      "48": "icon.png"
    },
    "developer": {
      "url": "https://dhis2.github.io",
      "name": "DHIS2"
    },
    "dhis2": {
      "apiVersion": "30"
    },
    "activities": {
      "dhis": {
        "href": ".."
      }
    }
  },
  "homepage": ".",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.js",
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "mjs"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  }
}
